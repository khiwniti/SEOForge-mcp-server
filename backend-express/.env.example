# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Keys for Authentication
VALID_API_KEYS=dev-api-key-1,dev-api-key-2

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
REPLICATE_API_TOKEN=your-replicate-token
TOGETHER_API_KEY=your-together-api-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/seoforge
REDIS_URL=redis://localhost:6379

# WordPress Integration
WORDPRESS_API_BASE=https://your-wordpress-site.com/wp-json/wp/v2
WORDPRESS_USERNAME=your-wp-username
WORDPRESS_PASSWORD=your-wp-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags
ALLOW_REGISTRATION=true
ENABLE_SWAGGER_DOCS=true
ENABLE_METRICS=true

# External Services
FLUX_API_URL=https://api.replicate.com/v1/predictions
THAI_TRANSLATION_API=https://api.google.com/translate/v2