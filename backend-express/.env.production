# Production Environment Configuration for Vercel Deployment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Security Configuration
JWT_SECRET=your-production-jwt-secret-here
VALID_API_KEYS=your-production-api-keys-here

# AI Service Configuration
# Google Gemini API (Primary)
GOOGLE_API_KEY=

# OpenAI API (Fallback)
OPENAI_API_KEY=

# Anthropic Claude API (Fallback)
ANTHROPIC_API_KEY=

# Image Generation APIs
REPLICATE_API_TOKEN=
TOGETHER_API_KEY=

# Database Configuration (Optional)
DATABASE_URL=
REDIS_URL=

# WordPress Integration (Optional)
WORDPRESS_API_BASE=
WORDPRESS_USERNAME=
WORDPRESS_PASSWORD=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags
ALLOW_REGISTRATION=true
ENABLE_SWAGGER_DOCS=false
ENABLE_METRICS=true
ENABLE_CACHING=true

# Performance Configuration
MAX_CONTENT_LENGTH=10mb
REQUEST_TIMEOUT=30000
CACHE_TTL=3600

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# External Services
FLUX_API_URL=https://api.replicate.com/v1/predictions
THAI_TRANSLATION_API=https://api.google.com/translate/v2

# Vercel-specific Configuration
VERCEL=1
VERCEL_ENV=production
