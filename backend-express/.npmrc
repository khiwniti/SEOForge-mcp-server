# NPM Configuration for Vercel Deployment
# Exclude problematic packages that cause build issues

# Skip optional dependencies to reduce bundle size
optional=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Set registry
registry=https://registry.npmjs.org/

# Disable audit to speed up installs
audit=false

# Disable fund messages
fund=false

# Force specific versions to avoid conflicts
force=true

# Ignore scripts that might cause issues
ignore-scripts=false

# Prefer offline to use cache when possible
prefer-offline=true
