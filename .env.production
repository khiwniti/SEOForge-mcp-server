# Production Environment Variables for Vercel Deployment
# Copy these to your Vercel project environment variables

# API Keys (Required - Add these in Vercel dashboard)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# MCP Server Configuration
MCP_API_KEY=
JWT_SECRET=

# Database Configuration (Use Vercel Postgres or external provider)
DATABASE_URL=
REDIS_URL=

# Backend Configuration
ENVIRONMENT=production
CORS_ORIGINS=https://your-domain.vercel.app

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.vercel.app/api
REACT_APP_MCP_SERVER_URL=https://your-domain.vercel.app/api

# Performance Settings
RATE_LIMIT=100
CACHE_DURATION=3600
DEBUG_MODE=false

# Vercel-specific settings
VERCEL=1
VERCEL_ENV=production
