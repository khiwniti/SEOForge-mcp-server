{
  "name": "seoforge-mcp-unified",
  "version": "2.0.0",
  "description": "Unified SEO Forge MCP Server for Vercel Deployment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "vercel-build": "npm run build",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "mcp",
    "seo",
    "ai",
    "content-generation",
    "flux",
    "image-generation",
    "wordpress",
    "thai",
    "keyword-research",
    "mcp-server",
    "vercel",
    "serverless"
  ],
  "author": {
    "name": "SEO Forge Team",
    "email": "team@seoforge.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@vercel/node": "^3.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0"
  },
  "mcp": {
    "server": {
      "name": "seoforge-unified",
      "version": "2.0.0",
      "description": "Unified SEO Forge MCP Server with Vercel Support",
      "capabilities": [
        "content_generation",
        "seo_analysis",
        "keyword_research",
        "image_generation",
        "thai_language_support",
        "wordpress_integration",
        "batch_processing",
        "real_time_optimization"
      ]
    }
  }
}
