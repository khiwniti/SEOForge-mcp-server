# SEO Forge MCP Server Environment Configuration

# AI API Keys
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here
TOGETHER_API_KEY=your_together_api_key_here

# Database Configuration (Optional)
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/seoforge

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
DEFAULT_ADMIN_EMAIL=admin@seoforge.dev
DEFAULT_ADMIN_PASSWORD=change_this_password

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Vercel Configuration (Auto-set by Vercel)
VERCEL_URL=your-deployment.vercel.app
VERCEL_REGION=iad1
VERCEL_DEPLOYMENT_ID=auto_generated

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_TTL_CONTENT=7200
CACHE_TTL_SEO=3600
CACHE_TTL_KEYWORDS=86400
CACHE_TTL_TRANSLATION=86400
CACHE_TTL_IMAGES=604800

# WordPress Integration
WP_DEFAULT_TIMEOUT=30000
WP_MAX_RETRIES=3

# Security
CORS_ORIGINS=*
API_VERSION=2.0.0
